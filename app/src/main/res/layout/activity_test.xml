<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:weightSum = "2"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_above="@+id/linearLayout1"
        android:layout_alignEnd="@+id/welcome"
        android:layout_marginBottom="72dp">
        <RadioGroup
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/option1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Drove to Auto Zone" />
            <RadioButton
                android:id="@+id/option2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Set Scored" />
            <RadioButton
                android:id="@+id/option3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Tote Set Scored" />
            <RadioButton
                android:id="@+id/option4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Stacked Tote Set Scored" />
            <RadioButton
                android:id="@+id/option5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Bin Set" />
            <RadioButton
                android:id="@+id/option6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Can Burgled" />
            <RadioButton
                android:id="@+id/option7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Did Nothing" />

        </RadioGroup>
    </LinearLayout>

</RelativeLayout>