<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="@string/pref_header_general"
        android:key="pref_key_general_settings">
        <CheckBoxPreference
            android:key="superuser"
            android:title="@string/superuserText"
            android:defaultValue="false" />
        <EditTextPreference
        android:key="email"
        android:title="@string/emailText"
        android:defaultValue="null"
        android:selectAllOnFocus="true"
        android:inputType="textEmailAddress"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />
        <EditTextPreference
            android:key="number"
            android:title="@string/numberText"
            android:defaultValue="null"
            android:selectAllOnFocus="true"
            android:inputType="number"
            android:singleLine="true"
            android:maxLines="1" />
        <EditTextPreference
            android:key="pitScoutURL"
            android:title="@string/pitScoutURL"
            android:defaultValue="null"
            android:selectAllOnFocus="true"
            android:inputType="text"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1" />
    </PreferenceCategory>
</PreferenceScreen>
